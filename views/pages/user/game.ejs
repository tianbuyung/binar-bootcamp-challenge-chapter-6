<!DOCTYPE html>
<html lang="en">

<head>
    <!-- General Head -->
    <%- include('../../partials/head'); %>
        <!-- Internal icon -->
        <link rel="icon" type="image/x-icon" href="../images/game/logo 1.svg">
        <!-- Internal CSS -->
        <link rel="stylesheet" href="../stylesheets/game.css">
</head>

<body>
    <header>
        <div class="container-fluid pt-3 pb-5">
            <div class="row">
                <div class="d-inline-flex align-items-center">
                    <div>
                        <a href="/users/logout" class="h1 p-4"><img src="../images/game/back-button.svg"
                                class="img-fluid" alt="back button"></a>
                    </div>
                    <div>
                        <a href="/" class="h1 p-4"><img src="../images/game/logo 1.png" class="img-fluid logo"
                                alt="logo batu gunting kertas"></a>
                    </div>
                    <div>
                        <h1 class="h1 text-uppercase m-1 p-3 game-title">rock paper scissors</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main>
        <form action="/game" method="POST" onclick="">
            <div class="container pt-3">
                <div class="row">
                    <div class="col d-flex align-items-center flex-column">
                        <h3 class="text-uppercase pb-3 identity">
                            <%= user %>
                        </h3>
                        <div class="d-flex flex-column" id="userChoice">
                            <div class="d-flex align-items-center justify-content-center p-3 m-3 selections"
                                id="userRock">
                                <img src="../images/game/batu.png" class="rock-selected" alt="rock">
                            </div>
                            <div class="d-flex align-items-center justify-content-center p-3 m-3 selections"
                                id="userPaper">
                                <img src="../images/game/kertas.png" class="paper-selected" alt="paper">
                            </div>
                            <div class="d-flex align-items-center justify-content-center p-3 m-3 selections"
                                id="userScissors">
                                <img src="../images/game/gunting.png" class="scissors-selected" alt="scissors">
                            </div>
                        </div>
                    </div>
                    <div class="col align-items-center justify-content-center position-relative">
                        <div class="align-self-center position-absolute top-50 start-50 translate-middle">
                            <p class="game-result" id="gameResult">vs</p>
                            <input id="isWin" type="text" name="isWin" value="" style="display: none;">
                        </div>
                    </div>
                    <div class="col d-flex align-items-center flex-column">
                        <h3 class="text-uppercase pb-3 identity">com</h3>
                        <div class="d-flex flex-column" id="comChoice">
                            <div class="d-flex align-items-center justify-content-center p-3 m-3" id="comRock">
                                <img src="../images/game/batu.png" class="rock-selected" alt="rock">
                            </div>
                            <div class="d-flex align-items-center justify-content-center p-3 m-3" id="comPaper">
                                <img src="../images/game/kertas.png" class="paper-selected" alt="paper">
                            </div>
                            <div class="d-flex align-items-center justify-content-center p-3 m-3" id="comScissors">
                                <img src="../images/game/gunting.png" class="scissors-selected" alt="scissors">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row text-uppercase">
                    <div class="userScore">
                        <h3>Score</h3>
                        <p>
                            <%= user %>:
                                <span id="userScore">0
                                </span>
                                <input id="inputUserScore" type="text" name="userScore" value="0"
                                    style="display: none;">
                        </p>
                        <p id="userFinalChoice"></p>
                        <input id="inputUserFinalChoice" type="text" name="userFinalChoice" value=""
                            style="display: none;">
                    </div>
                    <p>vs</p>
                    <div class="comScore">
                        <p>com:
                            <span id="comScore">0
                            </span>
                            <input id="inputComScore" type="text" name="comScore" value="0" style="display: none;">
                        </p>
                        <p id="comFinalChoice"></p>
                        <input id="inputComFinalChoice" type="text" name="comFinalChoice" value=""
                            style="display: none;">
                    </div>
                </div>
                <div class="row">
                    <div class="d-flex align-items-center justify-content-center selections">
                        <button type="submit">
                            <img src="../images/game/refresh.png" class="img-fluid refresh-button" alt="refresh"
                                id="refreshButton">
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </main>

    <!-- General Javascript -->
    <%- include('../../partials/script') %>
        <!-- Internal Javascript -->
        <script type="text/javascript" src="../javascripts/game.js"></script>
</body>

</html>