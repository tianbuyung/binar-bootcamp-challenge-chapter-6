<!DOCTYPE html>
<html lang="en">

<head>
    <!-- General Head -->
    <%- include('../../partials/head'); %>
        <!-- Internal icon -->
        <link rel="icon" type="image/x-icon" href="../../images/home/icon.ico">
</head>

<body>
    <main>
        <div class="position-absolute top-0 start-50 translate-middle-x pt-5">
            <div class="card" style="width: 18rem;">
                <img src="../images/admin/profile-picture.png" class="card-img-top" alt="#">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        <%= `${user.biodata.firstName} ${user.biodata.lastName}` %>
                    </h5>
                    <h6 class="card-title text-center">
                        <%= user.username %>
                    </h6>
                    <p class="card-text">
                        <%= user.biodata.bio %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Phone Number: <%= user.biodata.phoneNumber %>
                    </li>
                    <li class="list-group-item">Address: <%= user.biodata.address %>
                    </li>
                    <li class="list-group-item text-center">
                        <%= user.biodata.bio %>
                    </li>
                </ul>
                <div class="card-body text-center">
                    <a href="/admin" class="card-link">Dashboard</a>
                    <a href="/admin/edit/<%= user.id %> " class="card-link">Edit</a>
                    <a href="/admin/delete/<%= user.id %>" class="card-link">Delete</a>
                </div>
            </div>
        </div>
    </main>
    <!-- General Javascript -->
    <%- include('../../partials/script') %>
</body>

</html>